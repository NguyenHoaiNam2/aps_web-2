@model IEnumerable<ProjectA.Models.SanPham>
<!-- Phần Manga -->
<div class="container product-container" style="margin-top: 50px; position: relative;">
    <h2 class="text-center">Truyện tranh Nhật Bản</h2>
    <div class="row">
        <div>
            <a href="javascript:void(0);" class="position-absolute top-50 start-0 translate-middle-y" style="z-index: 1; font-size: 2rem; padding-left: 20px;" id="prevBtnManga">
                <i class="fas fa-chevron-left"></i>
            </a>
        </div>
        <div class="col-12" style="overflow: hidden; padding: 0 3rem;">
            <div class="border p-3" style="border: 1px solid #ccc; border-radius: 5px; overflow: hidden;">
                <div class="d-flex" id="product-container-manga" style="scroll-behavior: smooth; width: 100%; overflow-x: hidden;">
                    @foreach (var item in Model.Where(p => p.TheLoai.Name == "Manga" && p.Name.Contains("Tập 1")))
                    {
                        <div class="flex-shrink-0" style="min-width: 15rem; margin-right: 10px;">
                            <div class="card text-center" style="width: 15rem; margin: auto;">
                                <a asp-action="Details" asp-route-sanphamId="@item.Id">
                                    <img src="@item.ImageUrl" alt="Product image" class="product-image card-img-top">
                                </a>
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <h6 class="card-title text-danger">@item.Price.ToString("N0") đ</h6>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div>
            <a href="javascript:void(0);" class="position-absolute top-50 end-0 translate-middle-y" style="z-index: 1; font-size: 2rem; padding-right: 20px;" id="nextBtnManga">
                <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>
</div>

<!-- Mã JavaScript cho phần Manga -->
<script>
    const productContainerManga = document.getElementById('product-container-manga');
    const scrollAmountManga = 200; // Số pixel để cuộn

    document.getElementById('prevBtnManga').onclick = function () {
        productContainerManga.scrollBy({ left: -scrollAmountManga, behavior: 'smooth' });
    };

    document.getElementById('nextBtnManga').onclick = function () {
        productContainerManga.scrollBy({ left: scrollAmountManga, behavior: 'smooth' });
    };
</script>


