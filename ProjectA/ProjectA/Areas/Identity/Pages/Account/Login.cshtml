@page
@model LoginModel

@{
    ViewData["Title"] = "User Login";
}

<!-- Bố cục trung tâm cho toàn bộ trang đăng nhập -->
<div class="d-flex justify-content-center align-items-center vh-100" >
    <div class="login-box bg-light rounded p-5 shadow-lg" style="width: 320px;">
        <!-- Biểu tượng và tiêu đề -->
        <div class="text-center mb-4">
            <i class="bi bi-person-circle" style="font-size: 3rem; color: #333;"></i>
            <h2 class="mt-2">User Login</h2>
        </div>

        <!-- Form đăng nhập -->
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Trường nhập Username -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Username" />
                <label asp-for="Input.Email">Username</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Trường nhập Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Đường dẫn quên mật khẩu -->
            <div class="text-center mb-3">
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot Password?</a>
            </div>

            <!-- Nút đăng nhập -->
            <div>
                <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2">Login</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

