@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Bố cục trung tâm cho trang đăng ký -->
<div class="d-flex justify-content-center align-items-center vh-100" >
    <div class="register-box bg-light rounded p-5 shadow-lg" style="width: 750px;">
        <!-- Tiêu đề và biểu tượng đăng ký -->
        <div class="text-center mb-4">
            <i class="bi bi-person-plus" style="font-size: 3rem; color: #333;"></i>
            <h2 class="mt-2">Register</h2>
        </div>

        <!-- Form đăng ký -->
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Trường nhập Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Name" />
                <label asp-for="Input.Name">Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Trường nhập Address -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" aria-required="true" placeholder="Address" />
                <label asp-for="Input.Address">Address</label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <!-- Trường nhập Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Trường nhập Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Trường nhập Confirm Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Trường chọn Role -->
            <div class="form-floating mb-3">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option disabled selected>Choose role</option>
                </select>
                <label asp-for="Input.Role">Role</label>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <!-- Nút đăng ký -->
            <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-2">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
