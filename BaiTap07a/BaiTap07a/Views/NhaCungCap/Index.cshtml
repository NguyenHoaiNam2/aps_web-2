@{
    ViewData["Title"] = "Danh Sách Nhà Cung Cấp";
}

@model IEnumerable<BaiTap07a.Models.NhaCungCap>

<h2>Danh Sách Nhà Cung Cấp</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Địa chỉ</th>
            <th>Số điện thoại</th>
            <th>Thao tác</th> <!-- Thêm cột cho các thao tác CRUD -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ten</td>
                <td>@item.DiaChi</td>
                <td>@item.SDT</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a> <!-- Xem chi tiết -->
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Chỉnh sửa</a> <!-- Chỉnh sửa -->
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a> <!-- Xóa -->
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "NhaCungCap")" class="btn btn-primary">Thêm nhà cung cấp</a> <!-- Thêm mới -->
